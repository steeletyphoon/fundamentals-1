#!/usr/bin/env python3
import colors as c

python = c.o+'import '+c.b1+'colors '+c.g+'as '+c.b1+'c'+c.b3 
form = c.b3+'┃ '+'{1}'+'{2:7} '+c.b3+'┃{0} {3:21}'+c.b3+' ┃ {0}{4:14}'+c.b3+' ┃ {0} {5:7}'+c.b3+'  ┃ {0}{6:14}'+c.b3+'┃'+c.x

_colors = [
    [c.b03, 'BASE03', 'c.base03  c.b03 c.B03', '$SOL_base03', '#002B36', '\\033[1;30m'],
    [c.b02, 'BASE02', 'c.base02  c.b02 c.B02', '$SOL_base02', '#073642','\\033[0;30m'],
    [c.b01, 'BASE01', 'c.base01  c.b01 c.B01', '$SOL_base01', '#586E75','\\033[1;32m'],
    [c.b00, 'BASE00', 'c.base00  c.b00 c.B00', '$SOL_base00', '#657B83','\\033[1;33m'],
    [c.b0, 'BASE0',   'c.base0   c.b0  c.B0', '$SOL_base0', '#839496','\\033[1;34m'],
    [c.b1, 'BASE1',   'c.base1   c.b1  c.B1', '$SOL_base1', '#93A1A1','\\033[1;36m'],
    [c.b2, 'BASE2',   'c.base2   c.b2  c.B2', '$SOL_base2', '#EEE8D5','\\033[0;37m'],
    [c.b3, 'BASE3',   'c.base3   c.b3  c.B3', '$SOL_base3', '#FDF6E3','\\033[1;37m'],
    [c.y, 'YELLOW',   'c.yellow  c.y   c.Y', '$SOL_yellow', '#B58900','\\033[0;33m'],
    [c.o, 'ORANGE',   'c.orange  c.o   c.O', '$SOL_orange', '#CB4B16','\\033[1;31m'],
    [c.r, 'RED',      'c.red     c.r   c.R', '$SOL_red', '#DC322F','\\033[0;31m'],
    [c.m, 'MAGENTA',  'c.magenta c.m   c.M', '$SOL_magenta', '#D33682','\\033[0;35m'],
    [c.v, 'VIOLET',   'c.violet  c.v   c.V', '$SOL_violet', '#6C71C4','\\033[1;35m'],
    [c.b, 'BLUE',     'c.blue    c.b   c.B', '$SOL_blue', '#268BD2','\\033[0;34m'],
    [c.c, 'CYAN',     'c.cyan    c.c   c.C', '$SOL_cyan', '#2AA198', '\\033[0;36m'],
    [c.g, 'GREEN',    'c.green   c.g   c.G', '$SOL_green', '#859900', '\\033[0;32m'],
    [c.b1, 'RESET',   'c.reset   c.x   c.X', '$SOL_reset', ' ', '\\033[0m'],
    [c.b1, 'CLEAR',   'c.clear   c.cl  c.CL', '$SOL_clear', ' ', '\\033[H\\033[2J'],
    [c.rc(), 'RANDOM',  'c.random() c.rc()', '`random_color`', ' ', ' '],
]

print(c.cl,end='')
print(c.b3 + '┏━━━━━━━━━┳━━━━━━━━━━━━━━━━━━━━━━━┳━━━━━━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━━━━━┓' + c.x)
print(c.b3 + '┃  Color  ┃  ' + python     + '   ┃    Shell       ┃ Web (RGB) ┃     ANSI      ┃' + c.x)
print(c.b3 + '┣━━━━━━━━━╋━━━━━━━━━━━━━━━━━━━━━━━╋━━━━━━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━━━━━┫' + c.x)

for n in range(len(_colors)):
    if n % 2:
        _colors[n].insert(0,c.b1)
    else:
        _colors[n].insert(0,c.b01)
    print(form.format(*_colors[n]))

print(c.b3 + '┗━━━━━━━━━┻━━━━━━━━━━━━━━━━━━━━━━━┻━━━━━━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━━━━━┛' + c.x)

